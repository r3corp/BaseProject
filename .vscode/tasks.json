{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: c++ build active file",
      "command": "/usr/bin/c++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-std=c++20",
        "-Wall",
        "-I${workspaceFolder}/src",
        "-I${workspaceFolder}/src/core",
        "-I${workspaceFolder}/src/ui",
        "-I${workspaceFolder}/src/models",
        "-I${workspaceFolder}/src/interfaces",
        "-I${workspaceFolder}/src/utils",
        "-I${workspaceFolder}/src/web",
        "-I${workspaceFolder}/src/db",
        "-I${workspaceFolder}/external/imgui",
        "-I${workspaceFolder}/external/imgui/backends",
        "-I/usr/include",
        "-I/usr/local/include",
        "-I/usr/include/SDL2/",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-lsqlite3",
        "-lSDL2",
        "-L${workspaceFolder}/external/imgui/build",
        "-L${workspaceFolder}/external/imgui/backends",
        "-L/usr/lib/x86_64-linux-gnu/",
        "-limgui",
        "-lGL",
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}